# ===================================
# DeFi Portfolio Environment Variables
# ===================================

# ==================
# Application Settings
# ==================
NODE_ENV=development
API_PORT=3000
WEB_PORT=8080
LOG_LEVEL=info

# ==================
# Database Configuration
# ==================
DATABASE_URL=postgresql://defi:defi123@localhost:5432/defi_dashboard?sslmode=disable
DB_USER=defi
DB_PASSWORD=defi123
DB_NAME=defi_dashboard

# ==================
# JWT Authentication
# ==================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRY=24

# ==================
# CORS Configuration
# ==================
ALLOW_ORIGINS=*

# ==================
# Frontend Configuration
# ==================
VITE_APP_NAME="DeFi Portfolio"
VITE_API_BASE_URL=http://localhost:3000
VITE_API_TIMEOUT=10000

# ==================
# Blockchain RPC URLs
# ==================
# Get API keys from Alchemy, Infura, or other providers
VITE_RPC_ETHEREUM=https://eth-mainnet.alchemyapi.io/v2/YOUR_API_KEY
VITE_RPC_POLYGON=https://polygon-mainnet.alchemyapi.io/v2/YOUR_API_KEY
VITE_RPC_ARBITRUM=https://arb-mainnet.g.alchemy.com/v2/YOUR_API_KEY
VITE_RPC_OPTIMISM=https://opt-mainnet.g.alchemy.com/v2/YOUR_API_KEY

# ==================
# External API Keys (Required)
# ==================
# Blockchain Data Providers
ALCHEMY_API_KEY=your-alchemy-api-key
INFURA_API_KEY=your-infura-api-key
ETHERSCAN_API_KEY=your-etherscan-api-key

# Market Data APIs
COINGECKO_API_KEY=your-coingecko-api-key-optional
DEFILLAMA_ENABLED=true

# Frontend Specific API Keys
VITE_COINGECKO_API_KEY=your_coingecko_api_key_here
VITE_MORALIS_API_KEY=your_moralis_api_key_here
VITE_INFURA_PROJECT_ID=your_infura_project_id_here
VITE_ALCHEMY_API_KEY=your_alchemy_api_key_here

# ==================
# DeFi Service APIs
# ==================
# Bridge Aggregators (Backend)
LIFI_API_KEY=your_lifi_api_key_here
LIFI_BASE_URL=https://li.quest/v1
SOCKET_API_KEY=your_socket_api_key_here
SOCKET_BASE_URL=https://api.socket.tech/v2

# Swap Aggregators (Backend)
ZEROX_API_KEY=your_0x_api_key_here
ZEROX_BASE_URL=https://api.0x.org
ONEINCH_API_KEY=your_1inch_api_key_here
ONEINCH_BASE_URL=https://api.1inch.io

# Swap Aggregators (Frontend)
VITE_ZEROX_API_KEY=your_0x_api_key_here
VITE_ONEINCH_API_KEY=your_1inch_api_key_here

# External API Rate Limits
EXTERNAL_API_TIMEOUT=30000
EXTERNAL_API_MAX_RETRIES=3
EXTERNAL_API_RETRY_DELAY=1000
EXTERNAL_API_RATE_LIMIT_RPS=10
EXTERNAL_API_RATE_LIMIT_BURST=20

# Wallet Services
VITE_WALLETCONNECT_PROJECT_ID=your_walletconnect_project_id_here

# ==================
# Feature Flags
# ==================
VITE_ENABLE_SWAP=false
VITE_ENABLE_BRIDGE=false
VITE_ENABLE_NOTIFICATIONS=false
ENABLE_CACHE=true
ENABLE_RATE_LIMIT=true

# ==================
# Analytics & Monitoring (Optional)
# ==================
VITE_GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
VITE_MIXPANEL_TOKEN=your_mixpanel_token_here

# ==================
# Optional Services
# ==================
REDIS_URL=redis://localhost:6379
DEBUG=false

# ==================
# Instructions
# ==================
# 1. Copy this file to .env: cp .env.example .env
# 2. Fill in your actual API keys and secrets
# 3. Never commit the .env file to version control
# 4. Update JWT_SECRET with a strong, unique secret for production